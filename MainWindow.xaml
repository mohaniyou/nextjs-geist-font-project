<Window x:Class="AntiVMSpoofTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Anti-VM Spoofing Tool" Height="650" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f8f9fa">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Border Grid.Row="0" 
                Background="#212529" 
                CornerRadius="8"
                Padding="20">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Anti-VM Spoofing Tool" 
                         Foreground="White"
                         FontSize="28" 
                         FontWeight="Bold" 
                         VerticalAlignment="Center"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel - Controls -->
            <Border Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="0,0,10,0"
                    BorderBrush="#dee2e6" 
                    BorderThickness="1">
                <StackPanel>
                    <TextBlock Text="Spoofing Options" 
                             FontSize="20" 
                             FontWeight="SemiBold" 
                             Margin="0,0,0,20"/>

                    <!-- Spoofing Options -->
                    <GroupBox Header="System Information" Margin="0,0,0,15">
                        <StackPanel Margin="10">
                            <CheckBox x:Name="chkSpoofBIOS" 
                                    Content="Spoof BIOS Information" 
                                    IsChecked="True" 
                                    Margin="0,5"/>
                            <CheckBox x:Name="chkChangeGUID" 
                                    Content="Change Machine GUID" 
                                    IsChecked="True" 
                                    Margin="0,5"/>
                            <CheckBox x:Name="chkChangeHostName" 
                                    Content="Change Hostname" 
                                    IsChecked="True" 
                                    Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>

                    <!-- Actions -->
                    <Button x:Name="btnRunSpoof" 
                            Content="Run Spoof" 
                            Height="40"
                            Background="#212529"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,10"/>
                    
                    <Button x:Name="btnDetectVM" 
                            Content="Detect Virtualization" 
                            Height="40"
                            Background="#6c757d"
                            Foreground="White"
                            BorderThickness="0"
                            Margin="0,10"/>

                    <!-- Settings -->
                    <GroupBox Header="Settings" Margin="0,15,0,0">
                        <StackPanel Margin="10">
                            <CheckBox x:Name="chkRunOnStartup" 
                                    Content="Run on Startup" 
                                    Margin="0,5"/>
                        </StackPanel>
                    </GroupBox>
                </StackPanel>
            </Border>

            <!-- Right Panel - Logs -->
            <Border Grid.Column="1" 
                    Background="White" 
                    CornerRadius="8" 
                    Padding="20"
                    Margin="10,0,0,0"
                    BorderBrush="#dee2e6" 
                    BorderThickness="1">
                <DockPanel>
                    <TextBlock Text="Operation Logs" 
                             FontSize="20" 
                             FontWeight="SemiBold" 
                             DockPanel.Dock="Top"
                             Margin="0,0,0,10"/>
                    <TextBox x:Name="txtLog" 
                            AcceptsReturn="True" 
                            IsReadOnly="True" 
                            TextWrapping="Wrap"
                            VerticalScrollBarVisibility="Auto"
                            Background="#f8f9fa"
                            Padding="10"
                            BorderThickness="1"
                            BorderBrush="#dee2e6"/>
                </DockPanel>
            </Border>
        </Grid>

        <!-- Footer -->
        <TextBlock Grid.Row="2" 
                   Text="Â© 2024 Anti-VM Spoofing Tool" 
                   HorizontalAlignment="Center" 
                   Foreground="#6c757d"/>
    </Grid>
</Window>
